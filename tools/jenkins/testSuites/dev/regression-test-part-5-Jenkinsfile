#!/usr/bin/env groovy
//Test will cover the following:
//Institute Navigation - View and Search authorities (schools, district, authority).
pipeline {
  agent any
  tools {nodejs "latest"}
  environment {
    LOCAL_JSON = ''
    extJSHelper = ''
    OWNER = 'bcgov'
    TESTS_REPO_NAME = 'educ-pen-reg-automation'
  }
  stages {
    stage('Initialize') {
      steps {
        script {
          sh "wget -O - https://raw.githubusercontent.com/bcgov/EDUC-INFRA-COMMON/master/openshift/common-deployment/deployHelpers.js > deployHelpers.js"
          extJSHelper = evaluate readFile('deployHelpers.js')
        }
        dir('frontend') {
          script {
            LOCAL_JSON = sh(script: 'oc -n 8878b4-dev -o json get secret test-cafe-config | sed -n \'s/.*"local.json": "\\(.*\\)"/\\1/p\' | base64 --decode', returnStdout: true).trim()
            writeFile file: '/var/lib/jenkins/jobs/DEV/jobs/TestCafeWorkflows/jobs/TestSuites/jobs/regression-test-part-5/workspace/frontend/tests/e2e/config/index.js', text: LOCAL_JSON
          }
        }
      }
    }
    stage('verify institute list test') {
      steps {
        script {
          try{
            TOKEN = sh( script: "oc -n 8878b4-dev -o json get secret github-actions-token | sed -n 's/.*\"token\": \"\\(.*\\)\"/\\1/p' | base64 --decode", returnStdout: true);
            extJSHelper.triggerWorkflow(TOKEN, 'verify-institute-list-dev-environment')
            extJSHelper.waitForWorkflowRunComplete(TOKEN)
          }
          catch(err){
            currentBuild.result = 'FAILURE'
            echo "Error detected, Continue to the next step"
          }
        }
      }
    }
    stage('verify institute details test') {
      steps {
        script {
          try{
            TOKEN = sh( script: "oc -n 8878b4-dev -o json get secret github-actions-token | sed -n 's/.*\"token\": \"\\(.*\\)\"/\\1/p' | base64 --decode", returnStdout: true);
            extJSHelper.triggerWorkflow(TOKEN, 'verify-institute-details-dev-environment')
            extJSHelper.waitForWorkflowRunComplete(TOKEN)
          }
          catch(err){
            currentBuild.result = 'FAILURE'
            echo "Error detected, Continue to the next step"
          }
        }
      }
    }
    stage('insert new school principal') {
      steps {
        dir('frontend') {
          sh 'npm install'
          sh 'npm run deleteSchoolPrincipal'
          sh 'npm run insertSchoolPrincipal'
        }
      }
    }
    stage('verify institute contacts test') {
      steps {
        script {
          try{
            TOKEN = sh( script: "oc -n 8878b4-dev -o json get secret github-actions-token | sed -n 's/.*\"token\": \"\\(.*\\)\"/\\1/p' | base64 --decode", returnStdout: true);
            extJSHelper.triggerWorkflow(TOKEN, 'verify-institute-contacts-dev-environment')
            extJSHelper.waitForWorkflowRunComplete(TOKEN)
          }
          catch(err){
            currentBuild.result = 'FAILURE'
            echo "Error detected, Continue to the next step"
          }
        }
      }
    }
    stage('delete school principal') {
      steps {
        dir('frontend') {
          sh 'npm install'
          sh 'npm run deleteSchoolPrincipal'
        }
      }
    }
  }
}
