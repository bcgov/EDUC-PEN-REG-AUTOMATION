#!/usr/bin/env groovy
pipeline {
  agent any
  stages {
    stage('Tear-down network') {
      steps {
          script {
            sh(script: 'oc -n 75e61b-test delete networkpolicy -l name=allow-traffic-from-jenkins-pen-tools', returnStdout: true)
          }
      }
    }
    stage('Tear-down batch network') {
      steps {
          script {
            sh(script: 'oc -n 8878b4-test delete networkpolicy -l name=allow-traffic-from-jenkins-pen-tools', returnStdout: true)
          }
      }
    }    
  }
}