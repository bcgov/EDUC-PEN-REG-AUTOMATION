#!/usr/bin/env groovy
pipeline {
  agent any
  tools {nodejs "latest"}
  stages {
    stage('preflight') {
      steps {
        echo sh(returnStdout: true, script: 'env')
        sh 'node -v'
      }
    }
    stage('build') {
      steps {
        sh 'npm --version'
        dir('frontend') {
          sh 'wget https://dl.google.com/linux/direct/google-chrome-stable_current_x86_64.rpm'
          sh 'yum localinstall google-chrome-stable_current_x86_64.rpm'
          sh 'npm install'
        }
      }
    }
    stage('test') {
      steps {
        dir('frontend') {
          sh(script: "npm run listTestCafeBrowsers", returnStdout: true)
          sh 'npm run studentFilloutAndActivatePenRequest'
        }
      }
    }
  }
}