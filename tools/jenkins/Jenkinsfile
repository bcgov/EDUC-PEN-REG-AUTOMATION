#!/usr/bin/env groovy
pipeline {
  agent any
  tools {nodejs "latest"}
  stages {
    stage('preflight') {
      steps {
        echo sh(returnStdout: true, script: 'env')
        sh 'node -v'
      }
    }
    stage('build') {
      steps {
        sh 'npm --version'
        dir('frontend') {
          sh 'npm install chromium -g'
          sh 'npm install chromium-binary -g'
          sh 'npm install'
        }
      }
    }
    stage('test') {
      steps {
        dir('frontend') {
          sh(script: "testcafe 'chrome' ./tests/e2e/testCases/maintenance/maintenancePageOffCheck.js", returnStdout: true)
          sh(script: "npm run listTestCafeBrowsers", returnStdout: true)
          sh 'npm run studentFilloutAndActivatePenRequest'
        }
      }
    }
  }
}