#!/usr/bin/env groovy
pipeline {
  agent any
  tools {nodejs "latest"}
  stages {
    stage('preflight') {
      steps {
        echo sh(returnStdout: true, script: 'env')
        sh 'node -v'
      }
    }
    stage('build') {
      steps {
        sh 'npm --version'
        dir('frontend') {
          sh 'npm install'
        }
      }
    }
    stage('test') {
      steps {
        dir('frontend') {
          sh('wget https://chromedriver.storage.googleapis.com/2.40/chromedriver_linux64.zip')
          sh('unzip chromedriver_linux64.zip')
          sh('chromedriver --version')
          sh(script: "npm run listTestCafeBrowsers", returnStdout: true)
          sh 'npm run studentFilloutAndActivatePenRequest'
        }
      }
    }
  }
}