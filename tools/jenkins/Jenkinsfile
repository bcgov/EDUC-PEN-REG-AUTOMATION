#!/usr/bin/env groovy
pipeline {
  agent any
  tools {nodejs "latest"}
  stages {
    stage('preflight') {
      steps {
        echo sh(returnStdout: true, script: 'env')
        sh 'node -v'
      }
    }
    stage('build') {
      steps {
        sh 'npm --version'
        dir('frontend') {
          sh 'wget https://dl.google.com/linux/direct/google-chrome-stable_current_amd64.deb'
          sh 'dpkg -i google-chrome*.deb'
          sh 'npm install'
        }
      }
    }
    stage('test') {
      steps {
        dir('frontend') {
          sh 'npm run studentFilloutAndActivatePenRequest'
        }
      }
    }
  }
}