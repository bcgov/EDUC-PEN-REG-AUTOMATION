#!/usr/bin/env groovy
pipeline {
  agent {
    docker {
      label dockerserver
      image 'node:14-alpine'
    }
  }
  tools {nodejs "latest"}
  stages {
    stage('preflight') {
      steps {
        echo sh(returnStdout: true, script: 'env')
        sh 'node -v'
      }
    }
    stage('build') {
      steps {
        sh 'npm --version'
        dir('frontend') {
          sh 'npm install'
        }
      }
    }
    stage('test') {
      steps {
        dir('frontend') {
          sh(script: "npm run listTestCafeBrowsers", returnStdout: true)
          sh 'npm run studentFilloutAndActivatePenRequest'
        }
      }
    }
  }
}