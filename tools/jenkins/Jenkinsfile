#!/usr/bin/env groovy
pipeline {
  agent any
  tools {nodejs "latest"}
  stages {
    stage('preflight') {
      steps {
        echo sh(returnStdout: true, script: 'env')
        sh 'node -v'
      }
    }
    stage('build') {
      steps {
        sh 'npm --version'
        dir('frontend') {
          sh 'npm install chromium -g'
          sh 'npm install testcafe -g'
          sh 'ldd node_modules/chromium/lib/chromium/chrome-linux/chrome'
          sh 'npm install'
        }
      }
    }
    stage('test') {
      steps {
        dir('frontend') {
          sh 'npm run studentFilloutAndActivatePenRequest'
        }
      }
    }
  }
}