#!/usr/bin/env groovy
pipeline {
  agent any
  tools {nodejs "latest"}
  stages {
    stage('preflight') {
      steps {
        echo sh(returnStdout: true, script: 'env')
        sh 'node -v'
      }
    }
    stage('build') {
      steps {
        sh 'npm --version'
        dir('frontend') {
          sh 'npm install'
        }
      }
    }
    stage('test') {
      steps {
        dir('frontend') {
          sh('curl https://raw.githubusercontent.com/dvershinin/apt-get-centos/master/apt-get.sh -o /usr/local/bin/apt-get')
          sh('chmod 0755 /usr/local/bin/apt-get')
          sh(script: "testcafe 'chrome' ./tests/e2e/testCases/maintenance/maintenancePageOffCheck.js", returnStdout: true)
          sh(script: "npm run listTestCafeBrowsers", returnStdout: true)
          sh 'npm run studentFilloutAndActivatePenRequest'
        }
      }
    }
  }
}