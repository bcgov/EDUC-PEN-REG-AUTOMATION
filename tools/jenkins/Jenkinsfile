#!/usr/bin/env groovy
pipeline {
  agent any
  tools {nodejs "latest"}
  stages {
    stage('preflight') {
      steps {
        echo sh(returnStdout: true, script: 'env')
        sh 'node -v'
      }
    }
    stage('build') {
      steps {
        sh 'npm --version'
      }
    }
    stage('test') {
      steps {
        sh 'cd frontend'
        sh 'npm run getAndDeletePenRequestData'
      }
    }
  }
}